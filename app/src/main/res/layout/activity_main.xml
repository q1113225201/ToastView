<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_toast_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="toast msg" />

    <Button
        android:id="@+id/btn_toast_msg_gravity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="toast view gravity" />

    <Button
        android:id="@+id/btn_toast_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="toast view" />

    <Button
        android:id="@+id/btn_toast_view_gravity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="toast view gravity" />

    <Button
        android:id="@+id/btn_toast_system"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="toast system" />

</LinearLayout>